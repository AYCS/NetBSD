#! /usr/bin/ruby -Ku

class EventView
	def initialize(line)
		@event = line
		@event = @event.gsub("    ### ","")
		@event = @event.gsub("\\","")
		@event = @event.gsub("\n",",")
	end
	def searchview(line)
		if @view 
			return
		end
		a = line.split(/ /)

		s=""
		s=a[5]
		if s.index("view")
			@view = a[4]
		elsif
			@view = a[5]
		end
	end
	def csv
		if @view == nil
			exit 
		end
		if @view == "new"
			exit 
		end
		@csv = @event + @view
		@csv = @csv.tr("\n","")
		@csv = @csv.tr("\\","")
		print " ",@csv,"\n"
	end
end

while line = STDIN.gets
	if line.include?("### ")
		a = EventView.new(line)
		line = STDIN.gets
		line = STDIN.gets
		line = STDIN.gets
		line = STDIN.gets
		if line.index("view")
			a.searchview(line)
			a.csv
		end
	elsif line.include?("------")
		break
	end
end
